ges(); // Remove any existing error messages\n  \n      if (emailInput.value.trim() === '') {\n        displayErrorMessage(emailInput, 'Veuillez entrer votre adresse email');\n      }\n  \n      if (!privacyCheckbox.checked) {\n        displayErrorMessage(privacyCheckbox, 'Vous devez accepter la politique de confidentialité');\n      }\n    };\n    // Add event listener to the submit button\n    submitButton.addEventListener('click', validateForm);\n  </script>\n  \n  <style>\n  .newsletter-bg {\n    background-color: burlywood;\n    height: 25vh;\n    width: 100%;\n  }\n  \n  .error-bubble {\n    color: red;\n    font-size: 14px;\n    margin-top: 5px;\n  }\n  </style>\n  "],"mappings":"AAiBI;AACA,MAAMA,UAAS,GAAIC,QAAQ,CAACC,cAAc,CAAC,YAAY,CAAC;AACxD,MAAMC,YAAW,GAAIF,QAAQ,CAACC,cAAc,CAAC,cAAc,CAAC;AAC5D,MAAME,eAAc,GAAIH,QAAQ,CAACC,cAAc,CAAC,iBAAiB,CAAC;;AAElE;AACA,MAAMG,mBAAkB,GAAIA,CAACC,OAAO,EAAEC,OAAO,KAAK;EAChD,MAAMC,WAAU,GAAIP,QAAQ,CAACQ,aAAa,CAAC,KAAK,CAAC;EACjDD,WAAW,CAACE,SAAQ,GAAI,cAAc;EACtCF,WAAW,CAACG,WAAU,GAAIJ,OAAO;EACjCD,OAAO,CAACM,UAAU,CAACC,YAAY,CAACL,WAAW,EAAEF,OAAO,CAACQ,WAAW,CAAC;AACnE,CAAC;;AAED;AACA,MAAMC,mBAAkB,GAAIA,CAAA,KAAM;EAChC,MAAMC,YAAW,GAAIf,QAAQ,CAACgB,sBAAsB,CAAC,cAAc,CAAC;EACpE,OAAOD,YAAY,CAACE,MAAK,GAAI,CAAC,EAAE;IAC9BF,YAAY,CAAC,CAAC,CAAC,CAACJ,UAAU,CAACO,WAAW,CAACH,YAAY,CAAC,CAAC,CAAC,CAAC;EACzD;AACF,CAAC;;AAED;AACA,MAAMI,YAAW,GAAKC,KAAK,IAAK;EAC9BA,KAAK,CAACC,cAAc,CAAC,CAAC,EAAE;;EAExBP,mBAAmB,CAAC,CAAC,EAAE;;EAEvB,IAAIf,UAAU,CAACuB,KAAK,CAACC,IAAI,CAAC,MAAM,EAAE,EAAE;IAClCnB,mBAAmB,CAACL,UAAU,EAAE,qCAAqC,CAAC;EACxE;EAEA,IAAI,CAACI,eAAe,CAACqB,OAAO,EAAE;IAC5BpB,mBAAmB,CAACD,eAAe,EAAE,qDAAqD,CAAC;EAC7F;AACF,CAAC;AACD;AACAD,YAAY,CAACuB,gBAAgB,CAAC,OAAO,EAAEN,YAAY,CAAC"},"metadata":{},"sourceType":"script","externalDependencies":[]}